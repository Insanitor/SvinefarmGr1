<!-- ko with: home -->
@{
    ViewBag.Title = "Farm";
}

<div id="bodyContainer" ng-app="FarmApp">
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="text-center col-md-12" ng-controller="FarmCtrl">
                    <h2 ng-model="title"></h2>
                    <div>
                        <p>
                            <input type="text" ng-minlength="3" ng-maxlength="10" ng-model="name">

                            <button class="btn" ng-click="CreateFarm()">Create</button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/app/farm-controller.js")
}

